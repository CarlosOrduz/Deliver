<core:FragmentDefinition
		xmlns="sap.m"
		xmlns:l="sap.ui.layout"
		xmlns:f="sap.ui.layout.form"
		xmlns:core="sap.ui.core">
	<Dialog title="Title">
		<beginButton>
			<Button text="OK" type="Emphasized" press="handleDialogOkButton"/>
		</beginButton>
		<endButton>
			<Button text="Cancel" press="handleDialogCancelButton"/>
		</endButton>
		<l:VerticalLayout
				class="sapUiContentPadding"
				width="100%">
			<f:SimpleForm
					id="appointmentCreateForm"
					editable="true"
					layout="ResponsiveGridLayout"
					singleContainerFullSize="false">
				<Label text="Title" labelFor="appTitle"/>
				<Input id="appTitle" maxLength="255"/>
				<Label text="Additional information" labelFor="inputInfo"/>
				<Input id="moreInfo" maxLength="255"/>
				<Label text="De" labelFor="startDate"/>
				<DateTimePicker
						id="DTPStartDate"
						required="true"
						visible="{= !${allDay>/allDay}}"
						change="handleDateTimePickerChange"/>
				<DatePicker
						id="DPStartDate"
						required="true"
						visible="{= ${allDay>/allDay}}"
						change="handleDatePickerChange"/>
				<Label text="Hasta" labelFor="endDate"/>
				<DateTimePicker
						id="DTPEndDate"
						required="true"
						visible="{= !${allDay>/allDay}}"
						change="handleDateTimePickerChange"/>
				<DatePicker
						id="DPEndDate"
						required="true"
						visible="{= ${allDay>/allDay}}"
						change="handleDatePickerChange"/>
				<CheckBox
						id="allDay"
						text="Todo el Dia"
						selected="{allDay>/allDay}"
						select="handleCheckBoxSelect"/>
				<Label text="Type" labelFor="appType"/>
				<Select
						id="appType"
						items="{/supportedAppointmentItems}">
					<core:Item key="{type}" text="{text}" />
				</Select>
				<Label text="Asistentes por Rol" labelFor="appAsistentes"/>
				<Button text="Nuevo Boton" type="Emphasized" iconFirst="true" width="126px" enabled="true" visible="true" iconDensityAware="false" press="action" xmlns:action="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" action:wiring="\{'press':\{'navigation':\{'routeName':'Rol'\}\}\}"/>
			</f:SimpleForm>
		</l:VerticalLayout>
	</Dialog>
</core:FragmentDefinition>