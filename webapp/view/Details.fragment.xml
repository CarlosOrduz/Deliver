<core:FragmentDefinition
		xmlns="sap.m"
		xmlns:f="sap.ui.layout.form"
		xmlns:core="sap.ui.core">
	<ResponsivePopover
			id="appTitle"
			title="{title}"
			class="sapUiResponsivePadding--header"
			placement="Auto"
			horizontalScrolling="True"
			verticalScrolling="True"
			contentWidth='100%'>
		<beginButton>
			<Button text="Edit" type="Emphasized" press="handleEditButton"/>
		</beginButton>
		<endButton>
			<Button text="Delete" press="handlePopoverDeleteButton"/>
		</endButton>
		<f:SimpleForm
				id="appointmentEditForm"
				editable="false"
				layout="ResponsiveGridLayout"
				singleContainerFullSize="false">
			<Label
					text="Additional information"
					labelFor="moreInfo"/>
			<Text id="moreInfo" text="{text}"/>
			<Label text="From" labelFor="startDate"/>
			<Text
					text="{
						path: 'startDate',
						formatter:'.formatDate'
					}"/>
			<Label text="To" labelFor="endDate"/>
			<Text
					text="{
						path: 'endDate',
						formatter:'.formatDate'
					}"/>
			<CheckBox
					id="allDay"
					text="All-day"
					selected="{allDay>/allDay}"
					enabled="false"/>
			<Label text="Type" labelFor="appType"/>
			<Text id="appType" text="{ path: 'type', formatter: '._typeFormatter'}"/>
			<List mode="SingleSelectMaster" width="100%" headerText="Asistentes" footerText="" backgroundDesign="Solid" showSeparators="All" growing="true"
								growingThreshold="10" growingScrollToLoad="true" visible="true">
				<items>
					<StandardListItem icon="sap-icon://person-placeholder" title="Jorge Barrera" description="jorge.barrera@esenttia.com - 3176842598"
										info="Coordinador reunion" infoState="None" type="Active" selected="false" visible="true"/>
					<StandardListItem icon="sap-icon://person-placeholder" title="Julian Amezquita" description="julian.amezquita@esenttia.com - 3125894735"
										info="Representante Ventas" infoState="None" type="Active" selected="false" visible="true"/>
					<StandardListItem icon="sap-icon://message-error" title="Armando Mendoza" description="armando.mendoza@esenttia.com - 31535485256"
										info="Representante TI" infoState="None" type="Active" selected="false" visible="true"/>
				</items>
			</List>
		</f:SimpleForm>
	</ResponsivePopover>
</core:FragmentDefinition>
