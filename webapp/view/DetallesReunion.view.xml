<mvc:View
	controllerName="com.sap.build.standard.essenttia.controller.Page"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns:unified="sap.ui.unified"
	xmlns="sap.m">
	<VBox class="sapUiSmallMargin">
		<Image xmlns:action="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" src="/webapp/resources/LogoEssentia.jpg" height="89px" width="89px" visible="true" densityAware="false" alt="Logo Essentia" />
		<SinglePlanningCalendar
			id="SPC1"
			class="sapUiSmallMarginTop"
			title= "Calendario Empresa"
			viewChange="handleViewChange"
			appointmentSelect="handleAppointmentSelect"
			headerDateSelect="handleHeaderDateSelect"
			startDateChange="handleStartDateChange"
			appointmentDrop="handleAppointmentDrop"
			appointmentResize="handleAppointmentResize"
			appointmentCreate="handleAppointmentCreateDnD"
			moreLinkPress="handleMoreLinkPress"
			startDate="{path: '/startDate'}"
			enableAppointmentsDragAndDrop="{settings>/enableAppointmentsDragAndDrop}"
			enableAppointmentsResize="{settings>/enableAppointmentsResize}"
			enableAppointmentsCreate="{settings>/enableAppointmentsCreate}"
			stickyMode="{settings>/stickyMode}"
			appointments="{path: '/appointments'}">
			<actions>
				<Button id="addNewAppointment" text="Crear Reunion" press="handleAppointmentCreate" tooltip="Agregar una nueva reunion" />
				<Button id="legendButton" icon="sap-icon://legend" press="handleOpenLegend" tooltip="Legenda del Calendario" />
			</actions>
			<views>
				<SinglePlanningCalendarDayView key="DayView" title="Dia" />
				<SinglePlanningCalendarWorkWeekView key="WorkWeekView" title="Semana de Trabajo" />
				<SinglePlanningCalendarWeekView key="WeekView" title="Semana" />
				<SinglePlanningCalendarMonthView key="MonthView" title="Mes" />
			</views>
			<appointments>
				<unified:CalendarAppointment
					title= "{title}"
					text= "{text}"
					type= "{type}"
					icon= "{icon}"
					startDate= "{startDate}"
					endDate= "{endDate}">
				</unified:CalendarAppointment>
			</appointments>
		</SinglePlanningCalendar>
	</VBox>
</mvc:View>
